<h1>Create a New Article</h1>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>

    <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
    </p>
    
    <p>
      <%= f.label :discription %><br/>
      <%= f.text_area :discription %>
    </p>

    <p>
      <%= f.label :bar_code %><br/>
      <%= f.number_field :bar_code %>
    </p>

    <p>
      <%= f.submit %>
    </p>

<% end %>