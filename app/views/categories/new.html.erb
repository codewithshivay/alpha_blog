<h1 class="text-center mt-4">Create a new Category</h1>
<div class="container">
<div class="row justify-content-center">
    <div class="col-10">
    <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-success rounded", local: true) do |f| %>

          <div class= "form-group row">
            <%= f.label :name, "Category Name", class: "col-2 col-from-label text-light" %>
              <div class= "col-10">
                <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a Name" %>
              </div>
          </div>

          <div class= "form-group row justify-content-center mt-3" id = "submit_btn">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>

      <% end %>
    </div>
    <div class="text-center mb-3"><%= link_to '[ Return to Article Listing ]', articles_path, class: "text-primary" %></div>
  </div >
</div>