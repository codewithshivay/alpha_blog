<h1>Forgot Password</h1>

<%= form_with(url: passwords_path, class: "shadow p-3 mb-3 bg-danger rounded", method: :post) do |form| %>
  <div class="from-group row">
    <%= form.label :email, 'Email:',class: "col-2 col-form-label mt-4 text-light" %>
    <%= form.email_field :email, class: "form-control shadow rounded" %>
  </div>
  
  <div class="from-group row mt-4 justify-content-center">
      <%= form.submit "Request OTP", class: "btn btn-outline-light btn-lg" %>
  </div>
  
<% end %>

<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>